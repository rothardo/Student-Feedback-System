<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Student Feedback system." />
  <link rel="icon" href="./favicon.ico" />
  <link rel="stylesheet" href="/nav.css">
  <title>Feedback Form</title>
  <style>
    Body {
      font-family: Calibri, Helvetica, sans-serif;
      margin: 0;
    }

    button {
      background-color: #4CAF50;
      width: 100%;
      color: orange;
      padding: 15px;
      margin: 10px 0px;
      border: none;
      cursor: pointer;
    }

    form {
      border: 3px solid #f1f1f1;
    }

    input[type=text],
    input[type=password] {
      width: 100%;
      margin: 8px 0;
      padding: 12px 20px;
      display: inline-block;
      border: 2px solid green;
      box-sizing: border-box;
    }

    button:hover {
      opacity: 0.7;
    }

    .container {
      margin: auto;
      max-width: 500px;
      padding: 25px;
      background-color: lightblue;
    }

    .feedback {
      width: 100%;
      max-width: 780px;
      background: #fff;
      margin: 0 auto;
      padding: 15px;
      box-shadow: 1px 1px 16px rgba(0, 0, 0, 0.3);
    }

    .survey-hr {
      margin: 10px 0;
      border: 0.5px solid #ddd;
    }

    .star-rating {
      /* margin: 25px 0 0px; */
      font-size: 0;
      white-space: nowrap;
      display: inline-block;
      width: 175px;
      height: 35px;
      overflow: hidden;
      position: relative;
      background: url("data:image/svg+xml;base64,");
      background-size: contain;
    }

    .star-rating i {
      opacity: 0;
      position: absolute;
      left: 0;
      top: 0;
      height: 100%;
      width: 20%;
      z-index: 1;
      background: url("data:image/svg+xml;base64,");
      background-size: contain;
    }

    .star-rating input {
      -moz-appearance: none;
      -webkit-appearance: none;
      opacity: 0;
      display: inline-block;
      width: 20%;
      height: 100%;
      margin: 0;
      padding: 0;
      z-index: 2;
      position: relative;
    }

    .star-rating input:hover+i,
    .star-rating input:checked+i {
      opacity: 1;
    }

    .star-rating i~i {
      width: 40%;
    }

    .star-rating i~i~i {
      width: 60%;
    }

    .star-rating i~i~i~i {
      width: 80%;
    }

    .star-rating i~i~i~i~i {
      width: 100%;
    }

    #one,
    #two,
    #three,
    #four,
    #form2header,
    #five {
      display: none;
    }
  </style>
</head>

<body>
  <div class="topnav">
    <a href="#home">Home</a>
    <a href="#news">News</a>
    <a href="#contact">Contact</a>
    <div class="topnav-right">
      <a href="#search">Search</a>
      <a href="/signout">
        Sign out
      </a>
    </div>
  </div>
  <div style="text-align: center;">
    <h1>Feedback Form</h1>
  </div>
  <section>
    <div class="rt-container">
      <div class="col-rt-12">
        <div class="Scriptcontent">
          <div class="feedback">
            <form method="POST" action="/edit/feedback" style="text-align: center;">
              <label>Pick a rating on a scale of 1 to 5.</label><br>
              <span class="star-rating">
                <input onclick="valueClicked(1)" type="radio" name="form1" value="1"><i></i>
                <input onclick="valueClicked(2)" type="radio" name="form1" value="2"><i></i>
                <input onclick="valueClicked(3)" type="radio" name="form1" value="3"><i></i>
                <input onclick="valueClicked(4)" type="radio" name="form1" value="4"><i></i>
                <input onclick="valueClicked(5)" type="radio" name="form1" value="5"><i></i>
              </span>
              <input type="hidden" name="teacherID" value=<%=teacherID %> >
              <div id="form2">
                <h1 id="form2header">Select one</h1>
                <div id="one" style="text-align: left;">
                  <input type="radio" name="form2" id="val1" value="1">
                  <label for="val1">Teacher should be disqualified.</label><br />
                  <input type="radio" name="form2" id="val2" value="2">
                  <label for="val2">Teacher doesn't come prepared.</label><br />
                  <input type="radio" name="form2" id="val3" value="3">
                  <label for="val3">Teacher cannot seem to control the class.</label><br />
                  <input type="radio" name="form2" id="val4" value="4">
                  <label for="val4">Teacher is rude in class.</label><br />
                  <input type="radio" name="form2" id="val5" value="5">
                  <label for="val5">Teacher doesn't answer students' doubts.</label><br />
                </div>
                <div id="two" style="text-align: left;">
                  <input type="radio" name="form2" id="val6" value="1">
                  <label for="val6">Teacher should be disqualified.</label><br />
                  <input type="radio" name="form2" id="val7" value="2">
                  <label for="val7">Teacher doesn't come prepared.</label><br />
                  <input type="radio" name="form2" id="val8" value="3">
                  <label for="val8">Teacher cannot seem to control the class.</label><br />
                  <input type="radio" name="form2" id="val9" value="4">
                  <label for="val9">Teacher is rude in class.</label><br />
                  <input type="radio" name="form2" id="val10" value="5">
                  <label for="val10">Teacher doesn't answer students' doubts.</label><br />
                </div>
                <div id="three" style="text-align: left;">
                  <input type="radio" name="form2" id="val11" value="1">
                  <label for="val11">Teacher should improve his/her teaching.</label><br />
                  <input type="radio" name="form2" id="val12" value="2">
                  <label for="val12">Teacher should improve his/her language.</label><br />
                  <input type="radio" name="form2" id="val14" value="3">
                  <label for="val14">Teacher is average, on the better side.</label><br />
                  <input type="radio" name="form2" id="val13" value="4">
                  <label for="val13">Teacher is just fine.</label><br />
                  <input type="radio" name="form2" id="val15" value="5">
                  <label for="val15">Teacher should answer students' doubts.</label><br />
                </div>
                <div id="four" style="text-align: left;">
                  <input type="radio" name="form2" id="val16" value="1">
                  <label for="val16">Teacher was good.</label><br />
                  <input type="radio" name="form2" id="val17" value="2">
                  <label for="val17">Teacher has a good command over the subject.</label><br />
                  <input type="radio" name="form2" id="val18" value="3">
                  <label for="val18">Teacher is very good.</label><br />
                  <input type="radio" name="form2" id="val19" value="4">
                  <label for="val19">Teacher controls the class well.</label><br />
                  <input type="radio" name="form2" id="val20" value="5">
                  <label for="val20">Teacher explains doubts well.</label><br />
                </div>
                <div id="five" style="text-align: left;">
                  <input type="radio" name="form2" id="val21" value="1">
                  <label for="val21">Teacher has excellent command over the subject.</label><br />
                  <input type="radio" name="form2" id="val22" value="2">
                  <label for="val22">Teacher can control the class very well.</label><br />
                  <input type="radio" name="form2" id="val23" value="3">
                  <label for="val23">Teacher explains doubts very well.</label><br />
                  <input type="radio" name="form2" id="val24" value="4">
                  <label for="val24">Teacher understands and helps students.</label><br />
                  <input type="radio" name="form2" id="val25" value="5">
                  <label for="val25">This teacher is my fav!</label><br />
                </div>
              </div>
              <button type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    const valueClicked = value => {
      document.getElementById('one').style.display = 'none'
      document.getElementById('two').style.display = 'none'
      document.getElementById('three').style.display = 'none'
      document.getElementById('four').style.display = 'none'
      document.getElementById('five').style.display = 'none'
      document.getElementById('form2header').style.display = 'block'
      switch (value) {
        case 1: document.getElementById('one').style.display = 'block'; break;
        case 2: document.getElementById('two').style.display = 'block'; break;
        case 3: document.getElementById('three').style.display = 'block'; break;
        case 4: document.getElementById('four').style.display = 'block'; break;
        case 5: document.getElementById('five').style.display = 'block'; break;
      }
    };
  </script>

</body>

</html>